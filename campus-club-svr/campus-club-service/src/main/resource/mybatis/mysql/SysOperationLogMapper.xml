<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.fjut.gmxx.campusclub.sysoperationlog.mapper.ISysOperationLogMapper">

    <resultMap id="sysOperationLogMap" type="java.util.Map">
        <result column="UUID" property="uuid" javaType="java.lang.String"/>
        <result column="CREATE_TIME" property="createTime" javaType="java.util.Date"/>
        <result column="CREATE_USER" property="createUser" javaType="java.lang.String"/>
        <result column="UPDATE_TIME" property="updateTime" javaType="java.util.Date"/>
        <result column="UPDATE_USER" property="updateUser" javaType="java.lang.String"/>
        <result column="DEL_IND" property="delInd" javaType="java.lang.String"/>
        <result column="VERSION" property="version" javaType="java.lang.Integer"/>

        <result column="remark" property="remark" javaType="java.lang.String"/>
        <result column="status_cd" property="statusCd" javaType="java.lang.Integer"/>
        <result column="update_time" property="updateTime" javaType="java.util.Date"/>
        <result column="update_user" property="updateUser" javaType="java.lang.String"/>
        <result column="version" property="version" javaType="java.lang.Integer"/>
        <result column="class_name" property="className" javaType="java.lang.String"/>
        <result column="operation_code" property="operationCode" javaType="java.lang.String"/>
        <result column="method_name" property="methodName" javaType="java.lang.String"/>
        <result column="user_code" property="userCode" javaType="java.lang.String"/>
    </resultMap>

    <sql id="column_list">
        sys_operation_log.uuid,
        sys_operation_log.remark,
        sys_operation_log.status_cd,
        sys_operation_log.class_name,
        sys_operation_log.operation_code,
        sys_operation_log.method_name,
        sys_operation_log.user_code,
        sys_operation_log.CREATE_TIME,sys_operation_log.CREATE_USER,sys_operation_log.UPDATE_USER,
        sys_operation_log.UPDATE_TIME, sys_operation_log.DEL_IND,
        sys_operation_log.VERSION
    </sql>

    <sql id="where_filters">
        <where>
            <if test="uuid!=null and uuid!=''">AND sys_operation_log.uuid = #{uuid}</if>
            <if test="createTime!=null and createTime!=''">AND sys_operation_log.create_time = #{createTime}</if>
            <if test="createUser!=null and createUser!=''">AND sys_operation_log.create_user = #{createUser}</if>
            <if test="delInd!=null and delInd!=''">AND sys_operation_log.del_ind = #{delInd}</if>
            <if test="remark!=null and remark!=''">AND sys_operation_log.remark = #{remark}</if>
            <if test="statusCd!=null and statusCd!=''">AND sys_operation_log.status_cd = #{statusCd}</if>
            <if test="updateTime!=null and updateTime!=''">AND sys_operation_log.update_time = #{updateTime}</if>
            <if test="updateUser!=null and updateUser!=''">AND sys_operation_log.update_user = #{updateUser}</if>
            <if test="version!=null and version!=''">AND sys_operation_log.version = #{version}</if>
            <if test="className!=null and className!=''">AND sys_operation_log.class_name = #{className}</if>
            <if test="operationCode!=null and operationCode!=''">AND sys_operation_log.operation_code = #{operationCode}</if>
            <if test="methodName!=null and methodName!=''">AND sys_operation_log.method_name = #{methodName}</if>
            <if test="userCode!=null and userCode!=''">AND sys_operation_log.user_code = #{userCode}</if>
        </where>
    </sql>
    <sql id="pagination">
        <if test="startIndex != null and pageSize!= null ">
            <![CDATA[
                LIMIT #{startIndex},#{pageSize}
            ]]>
        </if>
    </sql>
    <!--根据条件查询列表-->
    <select id="findSysOperationLogList" parameterType="map" resultMap="sysOperationLogMap">
        SELECT
        <include refid="column_list"/>
        FROM sys_operation_log sys_operation_log
        <include refid="where_filters"/>
        ORDER BY sys_operation_log.CREATE_TIME DESC
        <include refid="pagination" />
    </select>

</mapper>